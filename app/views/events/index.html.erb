<div class="content">
<h1>Events</h1>

<h2> Current Active Events</h2>
<table class="t02">
	<tr>
		<th>Job Number</th>
		<th>Client Name</th>		
		<th>Status</th>
		<th>Link</th>
	</tr>
	<% @events.each do |event| %>
		<% if event.status == "FIRST CONTACT" || event.status == "CALLED BACK" || event.status == "PROPOSAL GENERATED" || event.status == "SALES MEETING SCHEDULED" || event.status == "CONTRACT GENERATED" || event.status == "DEFINITE" %>
			<tr>
				<td> <%= event.job_identification_number %></td>
				<td> <%= event.client_first_name%> <%= event.client_last_name %></td>
				<td> <%= event.status %></td>
				<td> <%= link_to "View", event_path(event.id) %>
			</tr>
		<% end %>
	<% end %>
</table>
<H2>Closed Events</h2>
<table class="t02">
	<tr>
		<th>Job Number</th>
		<th>Client Name</th>		
		<th>Status</th>
		<th>Link</th>
	</tr>
	<% @events.each do |event| %>
		<% if event.status == "RELEASED" || event.status == "RELEASED-BAB" || event.status == "RELEASED-BADJ" %>
		<tr>
			<td> <%= event.job_identification_number %></td>
			<td> <%= event.client_first_name%> <%= event.client_last_name %></td>
			<td> <%= event.status %></td>
			<td> <%= link_to "View", event_path(event.id) %>
		</tr>
		<% end %>
	<% end %>
</table>
<br>
<div class="button-holder">
	<%= link_to "New Event", new_event_path, :class=>'add button-inner' %>
</div>
</div>
