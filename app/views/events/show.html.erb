<div id="content-wrap">
	<div class="title">
		<h1>
			<%= @event.client_first_name %>
			<%= @event.client_last_name %>'s Event
		</h1>
	</div>
	<div id="info-wrap">
		<div class="info">
			<h2>Event Details</h2>
			<p><strong>Client First Name:</strong> <%= @event.client_first_name %></p>
			<p><strong>Client Last Name:</strong> <%= @event.client_last_name %></p>
			<p><strong>Event Planning Date:</strong> <%= @event.planning_date %></p>
			<p><strong>Event Job ID:</strong> <%= @event.job_identification_number %> </p>
			<p><strong>Status:</strong> <%= @event.status %></p>
			<p><strong>Final Date:</strong><%= @event.final_date%></p></br>

			<p><strong>Primary Contact:</strong> <%= @event.primary_contact %></p>
			<p><strong>Primary Contact Phone Number:</strong> <%= @event.primary_contact_phone %></p>
			<p><strong>Primary Contact Email:</strong> <%= @event.primary_contact_email %></p></br>
			<p><strong>Secondary Contact:</strong> <%= @event.secondary_contact %></p>
			<p><strong>Secondary Contact Phone Number:</strong> <%= @event.secondary_contact_phone %></p>
			<p><strong>Secondary Contact Email:</strong> <%= @event.secondary_contact_email %></p>
			<% if @event.third_contact != "" %>
				</br>
				<p><strong>Third Contact:</strong> <%= @event.third_contact %></p>
				<p><strong>Third Contact Phone Number:</strong> <%= @event.third_contact_phone %></p>
				<p><strong>Third Contact Email:</strong> <%= @event.third_contact_email %></p>
			<% end %>
			<% if @event.fourth_contact != "" %>
				</br>
				<p><strong>Fourth Contact:</strong> <%= @event.fourth_contact %></p>
				<p><strong>Fourth Contact Phone Number:</strong> <%= @event.fourth_contact_phone %></p>
				<p><strong>Fourth Contact Email:</strong> <%= @event.fourth_contact_email %></p>
			<% end %>

			<div class="button-holder">
				<%= link_to 'Edit Details', edit_event_path(@event), :class=> "edit button-inner"%>
			</div>
			<div class="button-holder">
				<%= link_to 'Create Notification', new_event_notification_path(@event), :class=> "add button-inner"%>
			</div>
		</div>
		<div class="info">
			<% if @event.final_date != nil %>
				<% if @event.bookings.length == 0 %>
					<h2>Band Availability</h2>
					<table style="border:none">
					<tr>
						<th>Band Name</th>
						<th>Band Leader</th>
						<th>Book Band</th>
						<th>Holds</th>
					</tr>
					<% @bands.each do |band| %>
						<% if band.is_free?(@event.final_date)%>
							<tr>
								<td><%= band.name %></td>
								<td><%= band.band_leader%></td>
								<td><%= link_to 'Link', new_event_booking_path(@event, :band_id => band.id)%></td>
								<td><%= band.how_many_holds(@event.final_date) %></td>
							</tr>
						<% end %>
					<% end %>
				<% end%>
				</table>
			<% end %>
			<div class="documents">
				<h2>Documents</h2>
				<% @documents.each do |document| %>
					<% if document.data.url.include?(".pdf") %>
						<li>
							<%= link_to "#{document.title}", document.data.url %>

							<%= image_tag "pdf_thumbnail.jpg" %>
						</li>
					<% else %>
						<li>
							<%= link_to "#{document.title}", document.data.url %>

							<%= image_tag "word.jpg" %>
						</li>
					<% end %>
				<% end %>
				<div class="button-holder">
					<%= link_to 'Upload Document', new_event_document_path(@event), :class=> "add button-inner"%>
				</div>
			</div>
			<% if @event.bookings.length > 0 %>
				<h2>Booking Information</h2>
				<table style="border:none">
					<tr>
						<th>Band</th>
						<th>Band Leader</th>
						<th>Type</th>
						<th>Delete</th>
					</tr>
					<% @event.bookings.each do |booking| %>
					<tr>
						<td><%= booking.band.name %></td>
						<td><%= booking.band.band_leader %></td>
						<td><%= booking.kind %></td>
						<td><%= link_to raw("&#10006"), event_booking_path(@event, booking), data: { confirm: 'Are you sure you want to delete this alert?' }, :method => :delete, :class => 'delete-button' %></td>

					</tr>
					<% end %>


				<% end %>
			</table>
		</div>
	</div>
	<div class="bottom">
		<h2>Communications</h2>

		<% if @contacts.length == 0 %>

			<p>There are no communications for this event</p>

		<% else  %>
			<% counter = 1 %>
			<% @contacts.each do |contact| %>
				<p><strong>Communication <%=counter%></strong></p>
				<p><strong>Date:</strong> <%= contact.date %></p>
				<p><strong>Notes:</strong></p>
				<p><%= contact.notes %></p>
				<% counter += 1 %>
			<% end %>
		<% end %>
		<div class="communications-stuff">
			<%= form_for [@event, @contact] do |f| %>
			<p><strong><%= f.label :date %>:</strong><%= f.date_field :date, :value=>Date.today %></p>
			<p><strong><%= f.label :notes %>:</strong></p>
			<p> <%= f.text_area :notes, :cols => 40, :rows => 15 %></p>
			<div class="button-holder">
				<p><%= f.submit "Create", :class => "add button" %></p>
			</div>
			<% end %>
		</div>
	</div>	



