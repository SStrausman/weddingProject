<div id="content-wrap">
	<div class="title">
		<h1>
			<%= @event.client_first_name %>
			<%= @event.client_last_name %>'s Event
		</h1>
	</div>
	<div id="info-wrap">
		<div class="info">
			<h2>Event Details</h2>
			<p><strong>Client First Name:</strong> <%= @event.client_first_name %></p>
			<p><strong>Client Last Name:</strong> <%= @event.client_last_name %></p>
			<p><strong>Event Job ID:</strong> <%= @event.job_identification_number %> </p>
			<p><strong>Event Type:</strong> <%= @event.event_type %></p></br>
			<p><strong>Final Date:</strong> <%= @event.final_date%></p>
			<p><strong>Event Planning Date:</strong> <%= @event.planning_date %></p></br>
			<p><strong>Referred By:</strong> <%= @event.referred_by %></p>
			<p><strong>Guests:</strong> <%= @event.guests %></p>
			<p><strong>Venue:</strong> <%= @event.venue %></p></br>
			<p><strong>Status:</strong> <%= @event.status %></p>
			<p><strong>Inquiry Date:</strong> <%= @event.inquiry_date %></p>
			<p><strong>Start Time:</strong> <%= @event.start_time %></p>
			<p><strong>End Time:</strong> <%= @event.end_time %></p>
			<p><strong>Continuous:</strong> <%= @event.continuous %></p>
			<p><strong>Contract Price:</strong> <%= @event.contract_price %></p>
			<p><strong>Overtime Rate:</strong> <%= @event.ot_price %></p>
			<p><strong>Musicians:</strong> <%= @event.number_of_musicians %></p>
			<p><strong>Vocalists:</strong> <%= @event.number_of_vocalists %></p>
			<p><strong>Sold By:</strong> <%= @event.sold_by %></p><br>

			<div class="button-holder">
				<%= link_to 'Edit Details', edit_event_path(@event), :class=> "edit button-inner"%>
			</div>
			<div class="button-holder">
				<%= link_to 'Create Notification', new_event_notification_path(@event), :class=> "add button-inner"%>
			</div>
		</div>
		<div class="info">

			<% if @event.final_date != nil %>
				<% if @event.bookings_only.length == 0 %>
					<h2>Band Availability</h2>
					<table style="border:none">
					<tr>
						<th>Band Name</th>
						<th>Band Leader</th>
						<th>Book Band</th>
						<th>Holds</th>
					</tr>
					<% @bands.each do |band| %>
						<% if band.is_free?(@event.final_date, @event) && band.already_booked(@event) %>

							<tr>
								<td><strong><%= band.name %></strong></td>
								<td><strong><%= band.band_leader%></strong></td>
								<td><strong><%= link_to 'Link', new_event_booking_path(@event, :band_id => band.id)%></strong></td>
								<td><strong><%= band.how_many_holds(@event.final_date) %></strong></td>
							</tr>
							<% if band.holds(@event.final_date).length > 0 %>
								<% band.holds(@event.final_date).each do |hold| %>
									<tr>
										<td>
											Job #: <%= hold.event.job_identification_number %>
										</td>
										<td>
											Client: <%= hold.event.client_first_name %> <%= hold.event.client_last_name %>
										</td>
										<td>
											Venue: <%= hold.event.venue %> <%= hold.event.client_last_name %>
										</td>
										<td>
											<%= link_to 'Link', event_path(hold.event_id)%>
										</td>
									</tr>
								<% end %>
							<% end %>
						<% end %>

					<% end %>
				<% end%>
				</table>
			<% end %>
				<% if @event.bookings.length > 0 %>
				<h2>Booking Information</h2>
				<table style="border:none">
					<tr>
						<th>Band</th>
						<th>Band Leader</th>
						<th>Type</th>
						<th>Delete</th>
					</tr>
					<% @event.bookings.each do |booking| %>
					<tr>
						<td><%= booking.band.name %></td>
						<td><%= booking.band.band_leader %></td>
						<td><%= booking.kind %></td>
						<td><%= link_to raw("&#10006"), event_booking_path(@event, booking), data: { confirm: 'Are you sure you want to delete this alert?' }, :method => :delete, :class => 'delete-button' %></td>

					</tr>
					<% end %>
			<% end %>
			</table>
			<div class="documents">
				<h2>Documents</h2>
				<% @documents.each do |document| %>
					<% if document.data.url.include?(".pdf") %>
						<li>
							<%= image_tag "pdf_thumbnail.jpg" %>
							<%= link_to "#{document.title}", document.data.url %>

						</li>
					<% elsif document.data.url.include?(".msg") %>
						<li>
							<%= image_tag "message-32.jpg" %>
							<%= link_to "#{document.title}", document.data.url %>

						</li>
					<% else %>
						<li>
							<%= image_tag "word.jpg" %>
							<%= link_to "#{document.title}", document.data.url %>

						</li>
					<% end %>
				<% end %>
				<br>
				<div class="button-holder">
					<%= link_to 'Upload Document', new_event_document_path(@event), :class=> "add button-inner"%>
				</div>
			</div>
		
		</div>
	</div>
	<div class="bottom">
		<div class="communications-stuff info">

		<h2>Communications</h2>

		<% if @contacts.length == 0 %>

			<p>There are no communications for this event</p>

		<% else  %>
			<% counter = 1 %>
			<% @contacts.each do |contact| %>
				<p><strong>Communication <%=counter%></strong></p>
				<p><strong>Date:</strong> <%= contact.date %></p>
				<p><strong>Notes:</strong></p>
				<p><%= contact.notes %></p>
				<% counter += 1 %>
			<% end %>
		<% end %>
			<%= form_for [@event, @contact] do |f| %>
			<p><strong><%= f.label :date %>:</strong><%= f.date_field :date, :value=>Date.today %></p>
			<p><strong><%= f.label :notes %>:</strong></p>
			<p> <%= f.text_area :notes, :cols => 40, :rows => 15 %></p>
			<div class="button-holder">
				<p><%= f.submit "Create", :class => "add button" %></p>
			</div>
			<% end %>
		</div>
		<div class="contact-information info">
			<h2>Contact Information</h2>
			<p><strong>Planner Name:</strong> <%= @event.planner_name%></p>
			<p><strong>Planner Email:</strong> <%= @event.planner_email%></p>
			<p><strong>Planner Phone:</strong> <%= @event.planner_phone%></p></br>

			<p><strong>Primary Contact:</strong> <%= @event.primary_contact %></p>
			<p><strong>Primary Contact Phone Number:</strong> <%= @event.primary_contact_phone %></p>
			<p><strong>Primary Contact Email:</strong> <%= @event.primary_contact_email %></p></br>
			<p><strong>Secondary Contact:</strong> <%= @event.secondary_contact %></p>
			<p><strong>Secondary Contact Phone Number:</strong> <%= @event.secondary_contact_phone %></p>
			<p><strong>Secondary Contact Email:</strong> <%= @event.secondary_contact_email %></p>
			<% if @event.third_contact != "" && @event.third_contact != nil %>
				</br>
				<p><strong>Third Contact:</strong> <%= @event.third_contact %></p>
				<p><strong>Third Contact Phone Number:</strong> <%= @event.third_contact_phone %></p>
				<p><strong>Third Contact Email:</strong> <%= @event.third_contact_email %></p>
			<% end %>
			<% if @event.fourth_contact != "" && @event.fourth_contact != nil %>
				</br>
				<p><strong>Fourth Contact:</strong> <%= @event.fourth_contact %></p>
				<p><strong>Fourth Contact Phone Number:</strong> <%= @event.fourth_contact_phone %></p>
				<p><strong>Fourth Contact Email:</strong> <%= @event.fourth_contact_email %></p>
			<% end %>
		</div>
	</div>	



