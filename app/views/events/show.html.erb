		</div>
     </div>
<% if @event.final_date != nil %>
     <h2>Band Availability</h2>
     <div class="object2">
			<% if @event.bookings_only.length == 0 %>
				<table style="border:none">
					<tr>
						<th>Band Name</th>
						<th>Band Leader</th>
						<th>Book Band</th>
						<th>Holds</th>
					</tr>
				<% @bands.each do |band| %>
					<% if band.is_free?(@event.final_date, @event) && band.already_booked(@event) %>
					<tr>
						<td><strong><%= band.name %></strong></td>
						<td><strong><%= band.band_leader%></strong></td>
						<td><strong><%= link_to 'Link', new_event_booking_path(@event, :band_id => band.id)%></strong></td>
						<td><strong><%= band.how_many_holds(@event.final_date) %></strong></td>
					</tr>
					<% if band.holds(@event.final_date).length > 0 %>
								<% band.holds(@event.final_date).each do |hold| %>
									<tr>
										<td>
											Job #: <%= hold.event.job_identification_number %>
										</td>
										<td>
											Client: <%= hold.event.client_first_name %> <%= hold.event.client_last_name %>
										</td>
										<td>
											Venue: <%= hold.event.venue %> <%= hold.event.client_last_name %>
										</td>
										<td>
											<%= link_to 'Link', event_path(hold.event_id)%>
										</td>
									</tr>
								<% end %>
					     <% end %>
					<% end %>

					<% end %>
				</table>
                    <% end%>
                                   <% if @event.bookings.length > 0 %>
                    <h2>Booking Information</h2>
                    <table style="border:none">
                         <tr>
                              <th>Band</th>
                              <th>Band Leader</th>
                              <th>Type</th>
                              <th>Delete</th>
                         </tr>
                         <% @event.bookings.each do |booking| %>
                         <tr>
                              <td><%= booking.band.name %></td>
                              <td><%= booking.band.band_leader %></td>
                              <td><%= booking.kind %></td>
                              <td><%= link_to raw("&#10006"), event_booking_path(@event, booking), data: { confirm: 'Are you sure you want to delete this alert?' }, :method => :delete, :class => 'delete-button' %></td>

                         </tr>
                         <% end %>
               </table>

			<% end %>
     </div>
     <% end %>

     <div class="object4">
     	<h2>Documents</h2>
				<% @documents.each do |document| %>
					<% if document.data.url.include?(".pdf") %>
						<li>
							<%= image_tag "pdf_thumbnail.jpg" %>
							<%= link_to "#{document.title} #{document.created_at.strftime("%A, %m/%d/%Y %I:%M %p")} ", document.data.url, :target => "_blank" %>
							<%= link_to raw("&#10006"), event_document_path(@event, document), data: { confirm: 'Are you sure you want to delete this docume?' }, :method => :delete, :class => 'delete-button' %>

						</li>
					<% elsif document.data.url.include?(".msg") %>
						<li>
							<%= image_tag "message-32.jpg" %>
							<%= link_to "#{document.title} #{document.created_at.strftime("%A, %m/%d/%Y %I:%M %p")} ", document.data.url, :target => "_blank" %>
                                   <%= link_to raw("&#10006"), event_document_path(@event, document), data: { confirm: 'Are you sure you want to delete this docume?' }, :method => :delete, :class => 'delete-button' %>

						</li>
                         <% elsif document.data.url.include?(".jpg") %>
                              <li>
                                   <%= image_tag "color-swatch.jpg" %>
                                   <%= link_to "#{document.title} #{document.created_at.strftime("%A, %m/%d/%Y %I:%M %p")} ", document.data.url, :target => "_blank" %>
                                   <%= link_to raw("&#10006"), event_document_path(@event, document), data: { confirm: 'Are you sure you want to delete this docume?' }, :method => :delete, :class => 'delete-button' %>

                              </li>
					<% else %>
						<li>
							<%= image_tag "word.jpg" %>
							<%= link_to "#{document.title} #{document.created_at.strftime("%A, %m/%d/%Y %I:%M %p")} ", document.data.url, :target => "_blank" %>
                                   <%= link_to raw("&#10006"), event_document_path(@event, document), data: { confirm: 'Are you sure you want to delete this docume?' }, :method => :delete, :class => 'delete-button' %>

						</li>
					<% end %>
				<% end %>
				<br>
				<div class="button-holder">
					<%= link_to 'Upload Document', new_event_document_path(@event), :class=> "add button-inner"%>
				</div>
     </div>
