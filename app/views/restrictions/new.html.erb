<div class="content">
<h2>Create a Scheduling Restriction</h2>
<%= form_for(@restriction) do |f| %>

<p><strong><%= f.label :notes %>:</strong> <%= f.text_area :notes, :cols => 40, :rows => 3 %></p></br>

<p><strong><%= f.label :start_date %>:</strong> <%= f.date_field :start_date %></p></br>

<p><strong><%= f.label :end_date %>:</strong> <%= f.date_field :end_date %></p></br>


<p><strong><%= f.label :band %>:</strong><%= f.select(:band_id, options_from_collection_for_select(Band.all, "id", "name")) %></p>

<div class="button-holder">
<p><%= f.submit "Create", :class => "button", :value => "Submit" %></p>
<% end %>
</div>
</div>